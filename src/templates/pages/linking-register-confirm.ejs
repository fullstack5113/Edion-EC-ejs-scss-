<%- include('../includes/_header') %>
<main id="main-content" class="main-content">

    <div id="linkingregister-confirm">
        <form class="form-block" action="xxx" method="post">
            <div class="container-sm">
                <div class="flow-wrap">
                    <div class="flow-list">
                        <div class="flow-item">
                            <div class="flow-itemicon">
                                <img src="./assets/img/linking-register/icon-input-on.png" alt="カード番号入力">
                            </div>
                            <div class="flow-itemtext">
                                カード番号入力
                            </div>
                        </div>
                        <div class="flow-item">
                            <div class="flow-itemicon">
                                <img src="./assets/img/linking-register/icon-confirm-on.png" alt="カード番号確認">
                            </div>
                            <div class="flow-itemtext">
                                カード番号確認
                            </div>
                        </div>
                        <div class="flow-item off complete">
                            <div class="flow-itemicon">
                                <img src="./assets/img/linking-register/icon-complete-off.png" alt="完了">
